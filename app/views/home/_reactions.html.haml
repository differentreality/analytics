- kind ||= nil
- data = posts_reactions_graph_data(@page, kind || nil)

%h4
  - Reaction::KINDS.each do |reaction|
    - count = data[:simple][reaction]
    - if count
      .col-xs-3.col-md-2.text-center
        %b= reaction.to_s.capitalize
        %p
          %i{ class: "fas #{icon_for(reaction.to_s)}", title: reaction.to_s.capitalize }
          = count
